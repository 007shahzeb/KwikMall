<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainRegisterLayout"

    android:background="@drawable/splach_bg"
    tools:context="mall.kwik.kwikmall.activities.SignInSignUpButtonsActivity">


    <ImageView
        android:id="@+id/image2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>


    <LinearLayout
        android:layout_below="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:id="@+id/line1"
            android:layout_width="390dp"
            android:layout_height="18dp"
            android:background="#FFFFFF"/>


        <ImageView
            android:layout_below="@id/line1"
            android:layout_width="450dp"
            android:layout_height="18dp"
            android:background="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="490dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#ffffff">


                <TextView
                    android:layout_width="490dp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="center"
                    android:text="@string/signup"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:background="@color/green">
                </TextView>


                <EditText
                    android:id="@+id/edUsername"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="USER NAME"
                    android:textSize="@dimen/_9sdp"
                    android:layout_margin="12dp"
                    android:drawableLeft="@drawable/user"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>

                <EditText
                    android:id="@+id/edEmailAddress"
                    android:layout_margin="12dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="EMAIL ADDRESS"
                    android:textSize="@dimen/_9sdp"
                    android:drawableLeft="@drawable/mail"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>



                <EditText
                    android:id="@+id/edPassword"

                    android:layout_margin="12dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PASSWORD"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/key"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>




                <EditText
                    android:id="@+id/edAddressRegister"
                    android:layout_margin="12dp"
                    android:padding="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Address"
                    android:textSize="@dimen/_9sdp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@drawable/agenda"
                    android:drawablePadding="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    >


                    <com.rilixtech.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"/>


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="ENTER MOBILE NO"
                        android:inputType="phone"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/black"
                        android:backgroundTint="#EDEDED"
                        android:textColorHint="@color/black"/>


                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/btnArroow"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:elevation="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="740dp"
        android:src="@drawable/rightarrowwhite"
        android:background="@drawable/circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_2sdp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:text="@string/alreadyaccount"
            />

        <TextView
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/green"
            />

    </LinearLayout>

</RelativeLayout>