<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainRegisterLayout"
    android:background="@drawable/splach_bg"
    tools:context="mall.kwik.kwikmall.activities.SignInSignUpButtonsActivity">


    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>


    <LinearLayout
        android:layout_below="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_30sdp">

        <ImageView
            android:id="@+id/line1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="#FFFFFF"/>


        <ImageView
            android:layout_below="@id/line1"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:background="#ffffff">


                <TextView
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:text="@string/signup"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:background="@color/green">
                </TextView>


                <EditText
                    android:id="@+id/edUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="USER NAME"
                    android:inputType="textPersonName"
                    android:drawableLeft="@drawable/user"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>

                <EditText
                    android:id="@+id/edEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="EMAIL ADDRESS"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:drawableLeft="@drawable/mail"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>



                <EditText
                    android:id="@+id/edPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="PASSWORD"
                    android:ems="10"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/key"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>


                <EditText
                    android:id="@+id/edMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER MOBILE NO"
                    android:inputType="number"
                    android:ems="10"
                    android:drawableLeft="@drawable/phone"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:drawablePadding="@dimen/_5sdp"

                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>

                <EditText
                    android:id="@+id/edAddressRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="ENTER ADDRESS"
                    android:inputType="text"
                    android:ems="10"
                    android:drawableLeft="@drawable/address"
                    android:padding="@dimen/_6sdp"
                    android:textSize="@dimen/_11sdp"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:drawablePadding="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:elevation="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_370sdp"
        android:src="@drawable/rightarrowwhite"
        android:background="@drawable/circle" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10sp"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp"
            android:text="@string/alreadyaccount"
            />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_in"
            android:textSize="@dimen/_11sdp"
            android:textColor="@color/green"
            />

    </LinearLayout>

</RelativeLayout>