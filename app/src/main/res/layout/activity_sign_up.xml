<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainRegisterLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splach_bg"
    tools:context="mall.kwik.kwikmall.activities.SignInSignUpButtonsActivity">


    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_70sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_30sdp"
        android:background="@drawable/logo" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image2"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/line1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_10sdp"
            android:background="#FFFFFF" />


        <ImageView
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@id/line1"
            android:background="#FFFFFF" />

        <RelativeLayout
            android:layout_width="@dimen/_240sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_250sdp"
                android:layout_centerHorizontal="true"
                android:background="#ffffff"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical">


                <TextView
                    android:layout_width="@dimen/_240sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:background="@color/green"
                    android:gravity="center"
                    android:text="@string/signup"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"/>


                <EditText
                    android:id="@+id/edUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:backgroundTint="#EDEDED"
                    android:drawableLeft="@drawable/user"
                    android:drawablePadding="@dimen/_5sdp"
                    android:ems="10"
                    android:hint="USER NAME"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <EditText
                    android:id="@+id/edEmailAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:backgroundTint="#EDEDED"
                    android:drawableLeft="@drawable/mail"
                    android:drawablePadding="@dimen/_5sdp"
                    android:ems="10"
                    android:hint="EMAIL ADDRESS"
                    android:inputType="textPersonName"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_11sdp" />


                <EditText
                    android:id="@+id/edPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:backgroundTint="#EDEDED"
                    android:drawableLeft="@drawable/key"
                    android:drawablePadding="@dimen/_5sdp"
                    android:ems="10"
                    android:hint="PASSWORD"
                    android:inputType="textPassword"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_11sdp" />


                <EditText
                    android:id="@+id/edAddressRegister"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:backgroundTint="#EDEDED"
                    android:drawableLeft="@drawable/address"
                    android:drawablePadding="@dimen/_5sdp"
                    android:ems="10"
                    android:hint="ENTER ADDRESS"
                    android:inputType="text"
                    android:padding="@dimen/_6sdp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_11sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp">


                    <com.rilixtech.CountryCodePicker
                        android:id="@+id/ccp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/edMobileNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="#EDEDED"
                        android:hint="ENTER MOBILE NO"
                        android:inputType="number"
                        android:maxLength="12"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="@dimen/_11sdp" />


                </LinearLayout>


                <!-- <EditText
                     android:id="@+id/edMobileNo"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:hint="ENTER MOBILE NO"
                     android:inputType="number"
                     android:ems="10"
                     android:drawableLeft="@drawable/phone"
                     android:padding="@dimen/_6sdp"
                     android:textSize="@dimen/_11sdp"
                     android:layout_marginLeft="@dimen/_3sdp"
                     android:drawablePadding="@dimen/_5sdp"
                     android:layout_marginRight="@dimen/_5sdp"
                     android:layout_marginTop="@dimen/_8sdp"
                     android:textColor="@color/black"
                     android:backgroundTint="#EDEDED"
                     android:textColorHint="@color/black"/>-->


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/btnSignUp"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_370sdp"
        android:background="@drawable/circle"
        android:elevation="8dp"
        android:src="@drawable/rightarrowwhite" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10sp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/alreadyaccount"
            android:textColor="@color/white"
            android:textSize="@dimen/_11sdp" />

        <TextView
            android:id="@+id/tvSignIn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="@string/sign_in"
            android:textColor="@color/green"
            android:textSize="@dimen/_11sdp" />

    </LinearLayout>

</RelativeLayout>