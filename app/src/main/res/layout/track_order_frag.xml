<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:id="@+id/headerTrackOrder"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/backArrowImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/_12sdp"
            android:src="@drawable/leftarrowblack" />

        <TextView
            android:id="@+id/txtViewCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:padding="5dp"
            android:text="@string/your_orders"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"
            app:fontPath="fonts/HindVadodara-Bold.ttf" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/headerTrackOrder"
        android:background="@color/white">


        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/imageOrderGif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/_20sdp"
            android:src="@drawable/norders" />


    </RelativeLayout>


    <!--   <include

           layout="@layout/content_timeline"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_below="@id/headerTrackOrder"


           />-->

</RelativeLayout>
