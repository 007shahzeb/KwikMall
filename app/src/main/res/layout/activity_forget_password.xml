<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splach_bg"
    tools:context="mall.kwik.kwikmall.activities.SignInSignUpButtonsActivity">


    <ImageView
        android:id="@+id/image2"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>


    <LinearLayout
        android:layout_below="@+id/image2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="@dimen/_100sdp">

        <ImageView
            android:id="@+id/line1"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_13sdp"
            android:background="#FFFFFF"/>


        <ImageView
            android:layout_below="@id/line1"
            android:layout_width="@dimen/_220sdp"
            android:layout_height="@dimen/_13sdp"
            android:background="#FFFFFF"/>

        <RelativeLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="vertical"
                android:layout_centerHorizontal="true"
                android:focusable="true"
                android:layout_centerVertical="true"
                android:focusableInTouchMode="true"
                android:background="#ffffff">


                <TextView
                    android:layout_width="330dp"
                    app:fontPath="fonts/HindVadodara-Bold.ttf"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:text="@string/forgetpass"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/green"/>


                <TextView
                    android:id="@+id/edEmailID"
                    android:layout_margin="@dimen/_8sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="EMAIL ADDRESS"
                    android:textSize="@dimen/_11sdp"
                    android:drawableLeft="@drawable/user"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="10dp"
                    android:layout_marginRight="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#EDEDED"
                    android:textColorHint="@color/black"/>



            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>


    <ImageButton
        android:id="@+id/btnForgetSubmit"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:elevation="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_330sdp"
        android:src="@drawable/rightarrowwhite"
        android:background="@drawable/circle" />



</RelativeLayout>