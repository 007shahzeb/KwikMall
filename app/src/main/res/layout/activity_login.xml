<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splach_bg"
    tools:context="mall.kwik.kwikmall.activities.SignInSignUpButtonsActivity">


    <ImageView
        android:layout_width="@dimen/_300sdp"
        android:layout_height="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/logo"/>


    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btnSignIn"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_35sdp"
                android:text="sign in"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/green"
                android:drawableRight="@drawable/rightarrowgreen"
                android:drawablePadding="@dimen/_10sdp"
                android:background="@drawable/roundbuttonrightwhite" />

            <Button
                android:id="@+id/btnSignUp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_width="@dimen/_90sdp"
                android:layout_height="@dimen/_35sdp"
                android:textColor="#ffff"
                android:text="sign up"
                android:drawablePadding="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"
                android:drawableRight="@drawable/rightarrowwhite"
                android:background="@drawable/roundbuttonrightgreen" />

        </LinearLayout>


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_150sdp"
            android:layout_marginLeft="@dimen/_75sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/mens"/>

    </LinearLayout>

</RelativeLayout>
