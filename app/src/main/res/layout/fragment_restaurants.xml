<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff"
    tools:context="mall.kwik.kwikmall.activities.FragmentsActivity">



    <FrameLayout
        android:id="@+id/afterShimmerLayout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewRestaurants"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>



    </FrameLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/shimmerlayoutRestaurants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        app:shimmer_angle="0"
        app:shimmer_color="#e4e4e4"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"

                >

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitXY"
                    android:background="@color/shimmerlayoutcolor"
                    />

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />



                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitXY"
                    android:background="@color/shimmerlayoutcolor"
                    />

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />



                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"

                >

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitXY"
                    android:background="@color/shimmerlayoutcolor"
                    />

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">



                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />



                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center"
                >

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:scaleType="fitXY"
                    android:background="@color/shimmerlayoutcolor"
                    />

                <LinearLayout
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_4sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor"
                        />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </io.supercharge.shimmerlayout.ShimmerLayout>



</RelativeLayout>
