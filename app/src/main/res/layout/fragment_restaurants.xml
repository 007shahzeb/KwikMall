<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    tools:context="mall.kwik.kwikmall.activities.FragmentsActivity">


    <FrameLayout
        android:id="@+id/afterShimmerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewRestaurants"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp">


        </android.support.v7.widget.RecyclerView>


        <ImageView
            android:id="@+id/imageNoFoodProd"
            android:layout_width="@dimen/_150sdp"

            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:src="@drawable/nofoodproducts"
            android:visibility="gone" />


    </FrameLayout>

    <io.supercharge.shimmerlayout.ShimmerLayout
        android:id="@+id/shimmerlayoutRestaurants"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_2sdp"
        app:shimmer_angle="0"
        app:shimmer_color="#e4e4e4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@color/shimmerlayoutcolor"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_4sdp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@color/shimmerlayoutcolor"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_4sdp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal"

                >

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@color/shimmerlayoutcolor"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_4sdp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:background="@color/shimmerlayoutcolor"
                    android:scaleType="fitXY" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_4sdp">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_10sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_150sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_250sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />


                    <View
                        android:layout_width="@dimen/_180sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:background="@color/shimmerlayoutcolor" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>
    </io.supercharge.shimmerlayout.ShimmerLayout>


</RelativeLayout>
