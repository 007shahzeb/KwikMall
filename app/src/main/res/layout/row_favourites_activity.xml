<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <RelativeLayout
        android:id="@+id/view_foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_4sdp"
        android:background="@drawable/my_custom_border_layout"

        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">



                <ImageView
                    android:id="@+id/cartImageViewFavourites"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/_3sdp"
                    android:background="@drawable/burger"
                    android:padding="@dimen/_1sdp"
                    android:scaleType="fitXY"
                    android:layout_margin="@dimen/_2sdp"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_5sdp"
                    >

                    <TextView
                        android:id="@+id/tvStoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Creative Food"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp"
                        android:padding="@dimen/_1sdp"
                        app:fontPath="fonts/HindVadodara-Bold.ttf"
                        />

                    <TextView
                        android:id="@+id/tvFoodNameFavourites"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Japanese Food"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_9sdp"


                        />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PRICE: "
                            android:textSize="@dimen/_9sdp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="GHS"
                            app:fontPath="fonts/HindVadodara-Bold.ttf"
                            android:padding="@dimen/_3sdp"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/black"/>



                        <TextView
                            android:layout_weight="1"
                            android:id="@+id/tvPriceItemFavourties"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="250"
                            android:textSize="@dimen/_9sdp"
                            android:textColor="@color/red"
                            />

                      <!--  <ImageView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_gravity="center"
                            android:background="@drawable/veg"/>-->


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/itemadded"
                            android:textSize="@dimen/_9sdp"
                            />

                        <TextView
                            android:id="@+id/tvAddFavouritesDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="21-DEC-2017 "
                            android:layout_weight="1"
                            android:textSize="@dimen/_9sdp"
                            />
                        <Button
                            android:id="@+id/btnDelete"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:minHeight="0dp"
                            android:background="@drawable/deletebtnbg"
                            android:text="DELETE"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textSize="@dimen/_9sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:padding="@dimen/_5sdp"
                            />


                    </LinearLayout>


                    <Button
                        android:id="@+id/btnAddToCartFavourites"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:text="@string/addtocart"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_11sdp"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/addtocartbtn"/>


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linearInvisible"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:background="@drawable/checkgreen"
                                />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/addedtocart"
                                android:layout_gravity="center"
                                android:textSize="@dimen/_9sdp"
                                android:textColor="@color/darkgreen"/>

                        </LinearLayout>

                        <Button
                            android:id="@+id/btnProceedToCheckOutFavourites"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:text="@string/proceedcheckout"
                            android:textAllCaps="false"
                            android:textSize="@dimen/_9sdp"
                            android:layout_margin="5dp"
                            android:background="@drawable/addtocartbtn"/>
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>






        </LinearLayout>



    </RelativeLayout>


</FrameLayout>